<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layoutDirection="ltr"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="jelly_bean_mr1">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@android:color/holo_red_dark"
                android:src="@drawable/baseline_delete_black_36"
                android:id="@+id/img_row_delete"
                android:layout_width="26dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"/>
            <ImageView
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/baseline_edit_black_36"
                android:id="@+id/img_row_edit"
                android:layout_width="26dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="@string/title_pattern"
                android:layout_margin="7dp"
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp" />
            <TextView
                android:maxLength="20"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:id="@+id/txtDes"
                android:text="@string/description_pattern"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>